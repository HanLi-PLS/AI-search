# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# OpenAI API Configuration
# Option 1: Direct API Key (simple, for local development)
OPENAI_API_KEY=your-openai-api-key-here

# Option 2: AWS Secrets Manager (recommended for production)
# Set USE_AWS_SECRETS=true to load OpenAI key from AWS Secrets Manager
USE_AWS_SECRETS=false
AWS_SECRET_NAME_OPENAI=openai-api-key

# Vision Model for PDF Image Processing
# Options: o4-mini (faster, cheaper) or gpt-4o (more capable)
VISION_MODEL=o4-mini

# AWS Configuration
# IMPORTANT: When running on EC2 with IAM role, do NOT set AWS_ACCESS_KEY_ID or AWS_SECRET_ACCESS_KEY
# Boto3 will automatically use the IAM role credentials
# Only set these for local development without IAM roles
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

# S3 Storage Configuration
# Set USE_S3_STORAGE=true to store uploaded files in S3 instead of local disk
USE_S3_STORAGE=false
AWS_S3_BUCKET=plfs-han-ai-search
S3_UPLOAD_PREFIX=uploads/

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents

# Embedding Model
EMBEDDING_MODEL=Qwen/Qwen2.5-Embedding-4B
# Alternative: sentence-transformers/all-MiniLM-L6-v2, BAAI/bge-base-en-v1.5, BAAI/bge-large-en-v1.5

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=100

# Upload Configuration
UPLOAD_DIR=./uploads
DATA_DIR=./data

# Authentication (future use)
SECRET_KEY=your-secret-key-for-jwt
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
