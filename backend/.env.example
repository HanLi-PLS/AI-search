# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration
# CRITICAL: In production, set this to your specific domain(s), comma-separated
# Example: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# Security Configuration
# CRITICAL: Set ENVIRONMENT to 'production' in production deployments
ENVIRONMENT=development

# Authentication
# CRITICAL: Generate a secure secret key for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secure-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours - prevents logout during long file uploads

# Rate Limiting (requests per time period)
# Adjust these based on your traffic and server capacity
RATE_LIMIT_DEFAULT=60/minute
RATE_LIMIT_SEARCH=20/minute
RATE_LIMIT_UPLOAD=10/minute
RATE_LIMIT_AUTH=5/minute

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Stock Data API Keys (optional)
FINNHUB_API_KEY=your-finnhub-api-key
TUSHARE_API_TOKEN=your-tushare-api-token

# AWS Secrets Manager (alternative to direct API keys)
USE_AWS_SECRETS=false
AWS_SECRET_NAME_OPENAI=openai-api-key
AWS_SECRET_NAME_FINNHUB=finnhub-api-key
AWS_SECRET_NAME_TUSHARE=tushare-api-token

# AI Model Configuration
VISION_MODEL=o4-mini
ANSWER_MODEL=gpt-4.1
ANSWER_TEMPERATURE=0
ONLINE_SEARCH_MODEL=o4-mini

# AWS Configuration (required if USE_AWS_SECRETS=true or USE_S3_STORAGE=true)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

# S3 Storage Configuration (optional)
USE_S3_STORAGE=false
AWS_S3_BUCKET=your-bucket-name
S3_UPLOAD_PREFIX=uploads/

# Qdrant Vector Database Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents

# Embedding Configuration
EMBEDDING_MODEL=Alibaba-NLP/gte-multilingual-base

# Document Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=100
MAX_CONCURRENT_VISION_CALLS=100  # High concurrency for fast PDF processing (async I/O, not CPU-bound)

# ==================================================
# PRODUCTION DEPLOYMENT CHECKLIST:
# ==================================================
# 1. Generate and set SECRET_KEY (required)
# 2. Set ENVIRONMENT=production (required)
# 3. Set CORS_ORIGINS to your domain(s) (required)
# 4. Set OPENAI_API_KEY or configure AWS Secrets Manager (required)
# 5. Consider enabling S3 storage for production (recommended)
# 6. Review and adjust MAX_FILE_SIZE_MB based on your needs
# 7. Ensure QDRANT is running and accessible
# 8. Set up SSL/TLS certificates for HTTPS
# 9. Configure firewall rules and network security
# 10. Set up monitoring and logging
